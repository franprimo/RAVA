<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <!--Colocamos los 3 framents estaticos-->
    <fragment class="com.example.franprimo.rava.LetrasFragment"
        android:layout_width="200dp"
        android:layout_height="700dp"
        android:id="@+id/letras_fragm"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/puntos_fragm">

    </fragment>

    <fragment class="com.example.franprimo.rava.BotonesFragment"
        android:layout_width="1080dp"
        android:layout_height="700dp"
        android:id="@+id/botones_fragm"
        android:layout_alignBottom="@+id/letras_fragm"
        android:layout_toEndOf="@+id/letras_fragm">

    </fragment>

    <fragment class="com.example.franprimo.rava.PuntosFragment"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/puntos_fragm"
        android:layout_alignParentBottom="true">

    </fragment>
</RelativeLayout>
